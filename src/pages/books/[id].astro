---
import Book from "../../Models/Book";
import Layout from "../../layouts/Layout.astro";
import BookComponent from "../../components/Book.svelte";
import Nav from "../../components/Nav.svelte";
const { id } = Astro.params;
const book = (await Book.findById(id)) as Book;
---

<Layout title={book.name}>
    <Nav client:visible />
    <BookComponent client:visible object={book} />
</Layout>
